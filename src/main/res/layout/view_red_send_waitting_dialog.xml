<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/red_send_wait_layout_waiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/red_img_wait_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/packing_89"/>
        <ImageView
            android:id="@+id/red_send_wait_img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/icon_red_send_wait_close" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_red_send_txt_14"
            android:layout_centerInParent="true"
            android:textColor="#EFC693"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/red_send_wait_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F9D8A3"
                android:textSize="15sp"
                android:text="24fewrerferf"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/activity_red_send_txt_15"
                android:textColor="#F9D8A3"
                android:textSize="10sp" />

            <Button
                android:id="@+id/red_send_wait_btn_falsh"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/icon_red_send_wait_falsh"
                android:text="@string/activity_red_send_txt_16"
                android:textAllCaps="false"
                android:textColor="@color/color_2E2F47"
                android:layout_marginBottom="30dp"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/red_send_wait_layout_waitok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/red_img_ok_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/close_30"/>
        <ImageView
            android:id="@+id/red_send_wait_img_ok_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/icon_red_send_wait_close" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_red_send_txt_17"
                android:textColor="#EFC693"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/activity_red_send_txt_18"
                android:textColor="#F9D8A3"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/red_send_wait_btn_share"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_width="160dp"
            android:layout_height="36dp"
            android:background="@mipmap/icon_red_send_wait_falsh"
            android:text="@string/activity_red_send_txt_19"
            android:textAllCaps="false"
            android:textColor="@color/color_2E2F47"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>