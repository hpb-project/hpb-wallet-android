<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#80000000">
    <LinearLayout
        android:id="@+id/layout_share_close"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/layout_share_img_show"
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        style="@style/common_txt_style_14_666"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/main_find_txt_06"
        android:background="#fff"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff">

            <LinearLayout
                android:id="@+id/layout_share_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_sina" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_qq" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_wechat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_wechat_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_wechat_circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_create_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_create_pic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_wechat_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_copy_url" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/umeng_socialize_share_more" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View style="@style/common_line_horizontal"/>
    <TextView
        android:id="@+id/layout_share_cancle"
        style="@style/common_txt_style_14_666"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:background="#fff"
        android:text="@string/dailog_psd_btn_cancle"/>
</LinearLayout>
