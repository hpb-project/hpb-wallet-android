<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/activity_about_me_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_18"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/activity_about_me_txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_9C9EB9"
                android:text="@string/activity_about_us_txt_05"/>
            <TextView
                style="@style/common_txt_style_12_999"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/color_9C9EB9"
                android:text="@string/activity_about_us_txt_07"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/activity_about_me_layout_top"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/activity_about_me_layout_01"
                android:layout_marginTop="@dimen/dp_10"
                style="@style/common_layout_style">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/activity_about_us_txt_01"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal"/>
            <RelativeLayout
                android:id="@+id/activity_about_me_layout_02"
                style="@style/common_layout_style">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/activity_about_us_txt_02"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal"/>
            <RelativeLayout
                android:id="@+id/activity_about_me_layout_03"
                style="@style/common_layout_style">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        style="@style/common_txt_style_14_666"
                        android:layout_centerVertical="true"
                        android:text="@string/activity_about_us_txt_04"/>
                    <TextView
                        android:id="@+id/activity_about_me_img_version"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_message_center_read"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:visibility="gone"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal_18"/>
        </LinearLayout>
        <TextView
            style="@style/common_txt_style_12_999"
            android:textColor="@color/color_9C9EB9"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/activity_about_us_txt_06"/>
    </RelativeLayout>
</LinearLayout>
