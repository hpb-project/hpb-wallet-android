<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_send_redpackets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_18"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout style="@style/red_layout_styld">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/receive_activity_txt_top_01"
                    android:textColor="@color/color_2E2F47" />

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/wallet_manager_txt_money_unit_01"
                    android:textColor="@color/color_2E2F47" />
            </RelativeLayout>

            <TextView
                android:id="@+id/send_red_packets_txt_all_money"
                style="@style/common_txt_style_12_999"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/color_9C9EB9" />

            <RelativeLayout
                style="@style/red_layout_styld"
                android:layout_marginTop="@dimen/dp_18">

                <ImageView
                    android:id="@+id/send_red_packets_redpackets"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/send_red_packets_all"
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@id/send_red_packets_redpackets"
                    android:text="@string/activity_red_send_txt_02" />

                <EditText
                    android:id="@+id/send_red_packets_edit_input_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_36"
                    android:layout_toLeftOf="@id/transfer_activity_img_delete"
                    android:layout_toEndOf="@id/send_red_packets_all"
                    android:layout_toRightOf="@id/txt_transfer_01"
                    android:background="@null"
                    android:digits="0123456789.,"
                    android:gravity="right|center_vertical"
                    android:hint="@string/activity_red_send_txt_03"
                    android:singleLine="true"
                    android:textColor="@color/color_2E2F47"
                    android:textColorHint="#D1D2DC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="HPB"
                    android:textColor="@color/color_2E2F47" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/dp_18"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/send_red_packets_txt_change_red_type_des"
                    style="@style/common_txt_style_12_999"
                    android:text="@string/activity_red_send_txt_04"
                    android:textColor="@color/color_9C9EB9" />

                <TextView
                    android:id="@+id/send_red_packets_txt_change_red_type"
                    style="@style/common_txt_style_12_999"
                    android:text="@string/activity_red_send_txt_05"
                    android:textColor="#CAA667" />
            </LinearLayout>

            <RelativeLayout
                style="@style/red_layout_styld"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:id="@+id/send_red_packets_txt_num"
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/activity_red_send_txt_06"
                    android:textColor="@color/color_2E2F47" />

                <EditText
                    android:id="@+id/send_red_packets_edit_num_red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toLeftOf="@id/transfer_activity_img_delete"
                    android:layout_toEndOf="@id/send_red_packets_txt_num"
                    android:layout_toRightOf="@id/txt_transfer_01"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="right|center_vertical"
                    android:hint="@string/activity_red_send_txt_08"
                    android:inputType="number"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:textColor="@color/color_66688f"
                    android:textColorHint="#D1D2DC"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/red_layout_styld"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_me_manager"
                    android:text="@string/transfer_activity_txt_10" />

                <TextView
                    android:id="@+id/send_red_packets_txt_fee"
                    style="@style/common_txt_style_14_666"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:text="0 HPB"
                    android:textColor="#D1D2DC" />

                <ImageView
                    android:id="@+id/send_red_packets_txt_what_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/icon_red_fee" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="12dp"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@drawable/bg_white_radius_6"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/send_red_packets_edit_reddes"
                    style="@style/edit_create_wallet_psd"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/activity_red_send_txt_11"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:lines="3"
                    android:maxLength="25"
                    android:paddingStart="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingEnd="@dimen/sp_18"
                    android:paddingBottom="@dimen/dp_12"
                    android:textColor="@color/color_66688f"
                    android:textColorHint="#D1D2DC"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/send_red_packets_txt_des_num"
                    style="@style/common_txt_style_12_999"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="0/25"
                    android:textColor="#D1D2DC" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:id="@+id/send_red_packets_txt_all_money_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" HPB"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/send_red_packets_btn_submit_red"
                    android:layout_width="250dp"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/draw_btn_defult_bg_01"
                    android:enabled="false"
                    android:text="@string/activity_red_send_txt_09"
                    android:textAllCaps="false"
                    android:textColor="@color/color_2E2F47"
                    android:textSize="15dp" />

                <TextView
                    style="@style/common_txt_style_12_999"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="@string/activity_red_send_txt_10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
