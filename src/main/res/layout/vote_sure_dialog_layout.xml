<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="198dp"
    android:background="@drawable/shape_sure_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_vote_txt_25"
        android:textColor="#2E2F47"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_vote_total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/icon_vote_zl_gold"
        android:text="投票总数共1000票"
        android:textColor="#54658B" />

    <EditText
        android:id="@+id/et_person_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_input_pwd_box"
        android:hint="@string/activity_vote_gl_txt_13"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="#B9C1D3"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEFF1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dailog_psd_btn_cancle"
            android:textColor="#9C9EB9"
            android:textSize="16sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EDEFF1" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dailog_psd_btn_ok"
            android:textColor="#2E2F47"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>