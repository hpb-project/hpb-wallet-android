<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@mipmap/icon_switch_address_assets">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_18"
            android:orientation="vertical"
            android:padding="@dimen/dp_18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_home_content_txt_allmoney"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_18"
                android:orientation="horizontal">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_switch_address_assets_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/tv_switch_address_assets"
                    android:layout_toEndOf="@id/tv_switch_address_assets_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:maxLines="1"
                    android:text="@string/fragment_main_home_no_yuan"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/iv_eyes_assets"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_6"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/tv_switch_address_assets"
                    android:src="@mipmap/icon_hide_assets" />

            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:text="@string/main_home_pop_choose_wallet_title"
        android:textColor="@color/color_black_333"
        android:textSize="@dimen/sp_16" />

</LinearLayout>