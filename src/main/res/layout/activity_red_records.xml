<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/common_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">
        <com.zhaoxi.Open_source_Android.common.view.TabView
            android:id="@+id/red_records_activity_tab_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:umname="@string/activity_red_record_txt_01" />
        <com.zhaoxi.Open_source_Android.common.view.TabView
            android:id="@+id/red_records_activity_tab_receipt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:umname="@string/activity_red_record_txt_02"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/red_records_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"/>
</LinearLayout>