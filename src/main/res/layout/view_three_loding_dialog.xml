<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#502E2F47"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <TextView
                style="@style/common_txt_style_14_666"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/three_loding_txt_01"/>
            <ImageView
                android:id="@+id/threee_loading_dialog_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/icon_pop_transfer_close"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.zhaoxi.Open_source_Android.common.view.RoundAngleImageView
                    android:id="@+id/threee_loading_dialog_img_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_img_defult"
                    app:roundHeight="10dp"
                    app:roundWidth="10dp" />
                <TextView
                    android:id="@+id/threee_loading_dialog_txt_name"
                    style="@style/common_txt_style_12_999"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#414141"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/three_loding_txt_02"/>
                <TextView
                    android:id="@+id/threee_loading_dialog_txt_form_address"
                    style="@style/common_txt_style_14_666"
                    android:textColor="@color/color_66688F"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:gravity="right"/>
            </LinearLayout>

            <Button
                android:id="@+id/three_loding_dialog_btn_submit"
                style="@style/common_btn_style_defult"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/draw_btn_defult_bg_03"
                android:text="@string/dailog_psd_btn_ok" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>