<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_2E2F47">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="0dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_vote_layout_bg">
                <EditText
                    android:id="@+id/vote_item_txt_keyword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textCursorDrawable="@drawable/color_cursor"/>
                <View android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/color_92939A"/>
                <TextView
                    android:id="@+id/vote_item_txt_query"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/activity_vote_txt_010"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vote_item_layout_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@mipmap/icon_vote_info_top_bg_1">
        <TextView
            android:id="@+id/vote_item_txt_look_rule"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@mipmap/icon_vote_info_top_look"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="12dp"
            android:textColor="@color/color_232538"
            android:text="@string/activity_vote_txt_06"/>
    </LinearLayout>


</LinearLayout>