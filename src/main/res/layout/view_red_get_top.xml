<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_red_record_recept_top"
        android:layout_marginBottom="@dimen/dp_18"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/dp_18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_get_red_txt_top_type"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_white_radius_3"
                    android:gravity="center"
                    android:text="æ‹¼"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <com.zhaoxi.Open_source_Android.common.view.MyTextView
                    android:id="@+id/item_get_red_txt_top_address"
                    style="@style/common_txt_style_14_666"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_get_red_txt_top_des"
                style="@style/common_txt_style_14_666"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:alpha="0.6"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/item_get_red_top_money"
                    style="@style/common_txt_style_15_333"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    style="@style/common_txt_style_15_333"
                    android:text=" HPB"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_get_red_txt_top_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="45dp"
                android:visibility="gone"
                android:gravity="center"/>
            <Button
                android:id="@+id/item_get_red_btn_choose"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_marginTop="45dp"
                android:background="@mipmap/icon_red_send_wait_falsh"
                android:text="@string/activity_red_get_txt_01"
                android:textAllCaps="false"
                android:textColor="@color/color_2E2F47"
                android:textSize="14dp"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



