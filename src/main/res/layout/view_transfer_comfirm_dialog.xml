<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#502E2F47"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <TextView
                style="@style/common_txt_style_14_666"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/receive_warn_txt_03"
                android:textColor="@color/color_black_333" />

            <ImageView
                android:id="@+id/transfer_dialog_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/icon_pop_transfer_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_25">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom">


                    <TextView
                        android:id="@+id/transfer_tv_token_721_title"
                        style="@style/common_txt_style_15_333"
                        android:text="@string/fragment_token_id_02"
                        android:textColor="@color/color_191E25"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/transfer_dialog_txt_money"
                        style="@style/common_txt_style_15_333"
                        android:textColor="@color/color_191E25" />

                    <TextView
                        android:id="@+id/transfer_dialog_txt_token_type"
                        style="@style/common_txt_style_14_666"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/wallet_manager_txt_money_unit_01" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:text="@string/receive_warn_txt_04"
                    android:textColor="@color/color_BABDC1" />

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_alignParentRight="true"
                    android:text="@string/transfer_activity_dialog_txt_03"
                    android:textColor="@color/color_black_333" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:text="@string/transfer_activity_dialog_txt_08"
                    android:textColor="@color/color_BABDC1" />

                <TextView
                    android:id="@+id/transfer_dialog_txt_to_address"
                    style="@style/common_txt_style_14_666"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:textColor="@color/color_black_333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:text="@string/receive_warn_txt_05"
                    android:textColor="@color/color_BABDC1" />

                <TextView
                    android:id="@+id/transfer_dialog_txt_form_address"
                    style="@style/common_txt_style_14_666"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:textColor="@color/color_black_333" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">

                <TextView
                    style="@style/common_txt_style_14_666"
                    android:text="@string/transfer_activity_txt_10"
                    android:textColor="@color/color_BABDC1" />

                <TextView
                    android:id="@+id/transfe_dialog_txt_fee"
                    style="@style/common_txt_style_14_666"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:textColor="@color/color_black_333" />
            </RelativeLayout>

            <Button
                android:id="@+id/transfer_dialog_btn_submit"
                style="@style/common_btn_style_defult"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/draw_btn_defult_bg_03"
                android:elevation="@dimen/dp_0"
                android:text="@string/dailog_psd_btn_ok"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>