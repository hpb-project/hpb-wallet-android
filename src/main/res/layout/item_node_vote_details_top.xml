<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@mipmap/icon_node_dividend_top_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:contentPaddingLeft="@dimen/dp_18"
                app:contentPaddingRight="@dimen/dp_18"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:src="@mipmap/icon_node_vote_all_person_num"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:orientation="vertical">
                            <TextView
                                style="@style/common_txt_style_12_999"
                                android:textColor="@color/color_2E3550"
                                android:text="@string/activity_cion_fh_txt_21_02"/>
                            <TextView
                                android:id="@+id/item_node_vote_details_txt_allperson"
                                style="@style/common_txt_style_12_999"
                                android:textSize="16dp"
                                android:textColor="@color/color_5870A4" />
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="0.5dp"
                        android:layout_height="49dp"
                        android:background="@color/color_E8E8E8"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:src="@mipmap/icon_node_vote_all_poll_num"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:orientation="vertical">
                            <TextView
                                style="@style/common_txt_style_12_999"
                                android:textColor="@color/color_2E3550"
                                android:text="@string/activity_cion_fh_txt_21_03"/>
                            <TextView
                                android:id="@+id/item_node_vote_details_txt_allpoll"
                                style="@style/common_txt_style_12_999"
                                android:textSize="16dp"
                                android:textColor="@color/color_5870A4" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:orientation="vertical">
                <Button
                    android:id="@+id/item_node_vote_details_btn_sendfh"
                    style="@style/common_btn_style_defult"
                    android:textColor="@color/white"
                    android:background="@drawable/draw_btn_defult_bg_03"
                    android:textAllCaps="false"
                    android:text="@string/activity_cion_fh_txt_10" />
                <Button
                    android:id="@+id/item_node_vote_details_btn_exprot"
                    style="@style/common_btn_style_defult"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/color_2E2F47"
                    android:background="@drawable/draw_btn_defult_bg_01"
                    android:textAllCaps="false"
                    android:text="@string/activity_cion_fh_txt_21_05" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="left"
            android:textColor="@color/color_334364"
            android:text="@string/activity_cion_fh_txt_21_06"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/color_334364"
            android:text="@string/activity_cion_fh_txt_21_07"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_334364"
            android:gravity="center"
            android:text="@string/activity_cion_fh_txt_21_08"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_d8d8d8"/>
</LinearLayout>