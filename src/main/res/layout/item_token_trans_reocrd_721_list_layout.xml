<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_assets_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_18"
    android:paddingTop="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_18">

        <ImageView
            android:id="@+id/item_assets_status_head"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_into_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:text="@string/fragment_token_id_02"
                        android:textColor="@color/color_black_333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/item_token_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/color_black_333"
                        android:textSize="@dimen/sp_14"
                        tools:text="HPBwallettwallettwallettwallettwallett" />


                </LinearLayout>


                <TextView
                    android:id="@+id/item_token_detail_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_14"
                    tools:text="09-04 12:00" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_main_token_detail_list_from_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color_BABDC1"
                    android:textSize="@dimen/sp_14"
                    tools:text="0xc2a...3bf26" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/activity_trans_record_to"
                    android:textColor="@color/color_BABDC1"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_main_token_detail_list_to_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color_BABDC1"
                    android:textSize="@dimen/sp_14"
                    tools:text="0xc2a...3bf26" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/sp_15"
        android:background="@drawable/shape_under_line" />

</LinearLayout>