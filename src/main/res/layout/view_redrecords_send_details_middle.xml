<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhaoxi.Open_source_Android.common.view.MyTextView
            android:id="@+id/item_redrecords_details_txt_status"
            style="@style/common_txt_style_14_666"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:gravity="center_vertical"
            android:textColor="#9FA1BB"/>
        <com.zhaoxi.Open_source_Android.common.view.MyTextView
            android:id="@+id/item_redrecords_details_txt_mnum"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#9FA1BB"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="#E4E7F6"/>
</LinearLayout>