<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.zhaoxi.Open_source_Android.common.view.refresh.MyPtrFrameLayout
        android:id="@+id/recycler_with_refresh_ptr_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.zhaoxi.Open_source_Android.common.view.recycler.LoadMoreRecyclerView
            android:id="@+id/transation_record_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false" />

    </com.zhaoxi.Open_source_Android.common.view.refresh.MyPtrFrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <View style="@style/common_line_horizontal"
            android:background="@color/color_E4E7F6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/layout_total_assets_recieve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_transfer_recieve"/>
                <TextView style="@style/common_txt_style_14_666"
                    android:layout_marginLeft="5dp"
                    android:text="@string/receive_activity_txt_title"/>
            </LinearLayout>
            <View android:layout_width="@dimen/dp_0_5"
                android:layout_height="36dp"
                android:background="@color/color_E4E7F6"/>
            <LinearLayout
                android:id="@+id/layout_total_assets_transfer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_transfer_transfer"/>
                <TextView style="@style/common_txt_style_14_666"
                    android:layout_marginLeft="5dp"
                    android:text="@string/transfer_activity_dialog_txt_03"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



