<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_assets_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_25"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_assets_status_head"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_into_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_main_token_detail_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_44C8A3"
                    android:textSize="@dimen/sp_14"
                    tools:text="+5.2106 HPB" />


                <TextView
                    android:id="@+id/item_token_detail_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_16"
                    tools:text="09-04 12:00" />

            </RelativeLayout>


            <TextView
                android:id="@+id/item_main_token_detail_list_from_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/color_BABDC1"
                android:textSize="@dimen/sp_16"
                tools:text="0xc2a25725e92d817e3aeed4dcc5be2b03d883bf26" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/sp_15"
        android:background="@color/color_EEEEEE" />

</LinearLayout>