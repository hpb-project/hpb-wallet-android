<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_18">
        <TextView
            style="@style/common_txt_style_14_666"
            android:layout_marginBottom="20dp"
            android:paddingRight="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_18"
            android:visibility="gone"
            android:text="@string/import_wallet_item_keystore_txt_des" />

        <EditText
            android:id="@+id/import_keystore_edit_content"
            style="@style/edit_import_mnemonic"
            android:hint="@string/import_wallet_item_keystore_input_hint" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/draw_edit_wallet_bg">

            <EditText
                android:id="@+id/import_keystore_edit_psd"
                style="@style/edit_create_wallet_psd"
                android:layout_marginRight="@dimen/dp_26"
                android:hint="@string/import_wallet_item_zhujici_psd_hint_two" />

            <ImageView
                android:id="@+id/import_keystore_img_eyes"
                style="@style/edit_right_img"
                android:src="@mipmap/icon_edit_psd_g" />
        </RelativeLayout>

        <View android:layout_width="wrap_content"
            android:layout_height="78dp"/>

        <include layout="@layout/view_common_create_wallet_bottom" />
    </LinearLayout>



</ScrollView>
