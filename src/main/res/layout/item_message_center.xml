<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_message_center_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">
        <com.zhaoxi.Open_source_Android.common.view.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="18dp"
            app:border_color="@color/white"
            app:border_width="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/item_message_center_title"
                    style="@style/common_txt_style_15_333"
                    android:textStyle="bold"
                    android:text="HPB" />
                <TextView
                    android:id="@+id/item_message_center_isread"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:visibility="visible"
                    android:background="@drawable/bg_message_center_read"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_message_center_content"
                style="@style/common_txt_style_14_666"
                android:layout_marginTop="@dimen/dp_4"
                android:lineSpacingExtra="@dimen/dp_4"
                android:maxLines="3"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_message_center_time"
                style="@style/common_txt_style_12_999"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_9C9EB9" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_line_horizontal"
        android:layout_marginLeft="@dimen/dp_18"/>

</LinearLayout>