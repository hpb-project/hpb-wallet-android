<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_token_id_header"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/icon_default_header_large"
            android:transitionName="share"
            android:visibility="visible"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_token_id_02"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_25" />

                <TextView
                    android:id="@+id/tv_token_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_25"
                    tools:text="HPBWalletWalletWalletWalletWalletWallet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_transfer_count_02"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_token_transfer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_13"
                    tools:text="300" />

                <View
                    android:layout_width="0.5px"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@color/color_d8d8d8" />

                <!--代币类型-->
                <TextView
                    android:id="@+id/item_token_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_main_right_top_bg"
                    android:padding="@dimen/dp_4"
                    android:text="@string/hrc_721"
                    android:textColor="@color/color_9AA0AB"
                    android:textSize="@dimen/sp_10"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/icon_token_id_card"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18">


        <LinearLayout
            android:id="@+id/ll_token_id_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:src="@mipmap/icon_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/main_home_top_txt_02"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_BABDC1" />

        <LinearLayout
            android:id="@+id/ll_token_id_transfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:src="@mipmap/icon_transfer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/main_home_top_txt_03"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_18"
        android:paddingEnd="@dimen/dp_18"
        android:text="@string/item_token_id_last_ten_transfer"
        android:textColor="@color/color_black_333"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_under_line" />


    <ImageView
        android:id="@+id/iv_default_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>