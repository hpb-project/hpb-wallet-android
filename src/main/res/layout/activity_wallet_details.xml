<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_wallet_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5">
    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:id="@+id/wallet_details_txt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_toolbar"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_18"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wallet_details_txt_wallet_header"
            style="@style/wallet_heaer_name_txt"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_centerVertical="true"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/wallet_details_txt_wallet_status"
            style="@style/common_txt_style_12_999"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/import_wallet_item_coldwallet"
            android:background="@drawable/bg_coldwallet_dialog"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <EditText
                    android:id="@+id/wallet_details_edit_name"
                    style="@style/common_txt_style_15_333"
                    android:layout_height="@dimen/common_line_small_height"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/create_wallet_edit_name_hint_01"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColorHint="@color/color_2E2F47" />

                <ImageView
                    android:id="@+id/wallet_details_btn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/icon_chage_wallet_name" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/wallet_details_txt_address"
            style="@style/common_txt_style_14_666"
            android:layout_width="280dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_66688F"
            android:ellipsize="middle"
            android:singleLine="true"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_wallet_deatils_address"/>
    </LinearLayout>
    <!-- 冷钱包 -->
    <LinearLayout
        android:id="@+id/wallet_details_layout_cold_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/wallet_details_txt_top"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/wallet_details_btn_delete_coldwallet"
            style="@style/common_layout_style"
            android:layout_height="@dimen/dp_60"
            android:background="@color/white">
            <TextView
                style="@style/common_txt_style_14_666"
                android:layout_centerVertical="true"
                android:textColor="@color/color_2E2F47"
                android:text="@string/wallet_manager_details_txt_delete_wallet"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_common_item_right_arrow"/>
        </RelativeLayout>
    </LinearLayout>
    <!-- 热钱包 -->
    <LinearLayout
        android:id="@+id/wallet_details_layout_hold_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_details_txt_top"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/wallet_details_txt_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/wallet_details_layout_exprot_privatekey"
                style="@style/common_layout_style"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2E2F47"
                    android:text="@string/wallet_manager_details_txt_export_key"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>
            <RelativeLayout
                android:id="@+id/wallet_details_layout_exprot_keystore"
                style="@style/common_layout_style"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2E2F47"
                    android:text="@string/wallet_manager_details_txt_export_keystore"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal"
                android:id="@+id/view_line_horizontal"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>
            <RelativeLayout
                android:id="@+id/wallet_details_btn_monc_wallet"
                style="@style/common_layout_style"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2E2F47"
                    android:text="@string/wallet_manager_details_txt_export_zhjici"/>
                <TextView
                    android:id="@+id/wallet_details_txt_no_copy"
                    style="@style/common_txt_style_12_999"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@drawable/bg_common_dialog"
                    android:text="@string/wallet_manager_txt_no_copy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wallet_details_txt_middle"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/wallet_details_layout_change_psd"
                style="@style/common_layout_style"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2E2F47"
                    android:text="@string/wallet_manager_details_txt_psd"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
            <View style="@style/common_line_horizontal"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>
            <RelativeLayout
                android:id="@+id/wallet_details_btn_delete_wallet"
                style="@style/common_layout_style"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_2E2F47"
                    android:text="@string/wallet_manager_details_txt_delete_wallet"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_common_item_right_arrow"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
