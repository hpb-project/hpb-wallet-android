<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_18"
    android:paddingTop="@dimen/dp_14">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_choose_main_wallet_img_header"
            style="@style/wallet_heaer_name_txt"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_choose_main_wallet_txt_type"
                    style="@style/common_txt_style_12_999"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_coldwallet_dialog"
                    android:gravity="center"
                    android:text="@string/import_wallet_item_coldwallet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_choose_main_wallet_txt_name"
                    style="@style/common_txt_style_14_666"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/create_wallet_edit_name_hint_01"
                    android:textColor="@color/color_black_333"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>


            <TextView
                android:id="@+id/item_choose_main_wallet_txt_address"
                style="@style/common_txt_style_12_999"
                android:layout_width="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/color_9AA0AB"
                android:textSize="@dimen/sp_13"
                tools:text="0xc2a25725e92d817e3aeed4dcc5be2b03d883bf26" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <!--代币价值-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp_20">
            <!--代币价值-->
            <TextView
                android:id="@+id/tv_wallet_assets_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9AA0AB"
                android:layout_marginRight="4dp"
                android:text="# #"
                android:textSize="@dimen/sp_18" />

            <!--代币价值-->
            <TextView
                android:id="@+id/item_wallet_asset_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9AA0AB"
                android:textSize="@dimen/sp_18"
                tools:text="3230" />

        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="50dp"
        android:background="@color/color_F5F6F8" />
</LinearLayout>