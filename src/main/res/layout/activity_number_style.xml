<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/layout_btn_numberstyle_01"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">
            <TextView
                android:id="@+id/txt_numberstyle_left_01"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_select_number_style_01"
                android:textColor="@color/color_9C9EB9"
                android:text="1"/>
            <TextView
                android:id="@+id/txt_numberstyle_content_01"
                style="@style/common_txt_style_14_666"
                android:layout_centerVertical="true"
                android:textColor="@color/color_9C9EB9"
                android:layout_marginLeft="30dp"
                android:text="@string/activity_system_setting_txt_06" />
            <ImageView
                android:id="@+id/img_numberstyle_select_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_select_number_style_hight"
                android:visibility="gone"/>
        </RelativeLayout>
        <View style="@style/common_line_horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"/>
        <RelativeLayout
            android:id="@+id/layout_btn_numberstyle_02"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">
            <TextView
                android:id="@+id/txt_numberstyle_left_02"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_select_number_style_01"
                android:textColor="@color/color_9C9EB9"
                android:text="2"/>
            <TextView
                android:id="@+id/txt_numberstyle_content_02"
                style="@style/common_txt_style_14_666"
                android:layout_centerVertical="true"
                android:textColor="@color/color_9C9EB9"
                android:layout_marginLeft="30dp"
                android:text="@string/activity_system_setting_txt_07" />
            <ImageView
                android:id="@+id/img_numberstyle_select_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_select_number_style_hight"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="vertical">
        <TextView
            style="@style/common_txt_style_14_666"
            android:textSize="16sp"
            android:textColor="@color/color_2E2F47"
            android:text="@string/activity_system_setting_txt_08" />
        <TextView
            android:id="@+id/radio_btn_numberstyle_eg"
            style="@style/common_txt_style_14_666"
            android:textSize="18sp"
            android:textColor="@color/color_2E2F47"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/activity_system_setting_txt_08_01" />
    </LinearLayout>
</LinearLayout>
