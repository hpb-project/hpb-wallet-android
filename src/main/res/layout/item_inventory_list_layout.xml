<?xml version="1.0" encoding="utf-8"?><!--<RelativeLayout --><!--android:layout_width="match_parent"--><!--android:id="@+id/token_inventory_item_container"--><!--android:layout_height="@dimen/dp_180">-->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_assets_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_3"
    app:contentPaddingBottom="@dimen/dp_10"
    app:contentPaddingTop="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--代币头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/token_header"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_default_header"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/fragment_token_inventory_id"
            android:textColor="@color/color_BABDC1"
            android:textSize="@dimen/sp_12" />

        <!--代币ID-->
        <TextView
            android:id="@+id/tv_token_id"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_black_333"
            android:textSize="@dimen/sp_14"
            tools:text="HPBWalletWalletWalletWallet" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/fragment_transfer_count"
            android:textColor="@color/color_BABDC1"
            android:textSize="@dimen/sp_12" />

        <!--转移次数-->
        <TextView
            android:id="@+id/tv_token_transfer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/color_black_333"
            android:textSize="@dimen/sp_14"
            tools:text="300" />

    </LinearLayout>


</android.support.v7.widget.CardView>

    <!--</RelativeLayout>-->
