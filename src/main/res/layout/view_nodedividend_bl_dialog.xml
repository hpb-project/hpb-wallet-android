<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_more_bg"
    android:paddingLeft="@dimen/dp_18"
    android:paddingRight="@dimen/dp_18"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/color_191E25"
        android:text="@string/activity_cion_fh_txt_27_01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/dialog_bl_edit_bilv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:layout_marginRight="25dp"
            android:textColor="@color/color_black_333"
            android:text=""/>
        <TextView
            style="@style/common_txt_style_12_999"
            android:textColor="@color/color_black_333"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:text="%"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d8d8d8"/>
    <TextView
        style="@style/common_txt_style_12_999"
        android:textColor="@color/color_BABDC1"
        android:layout_marginTop="7dp"
        android:text="@string/activity_cion_fh_txt_27_02"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingBottom="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/common_bl_dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_black_radius"
            android:text="@string/dailog_psd_btn_ok"/>
        <TextView
            android:id="@+id/common_bl_dialog_btn_cancle"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/color_334364"
            android:text="@string/dailog_psd_btn_cancle"/>
    </LinearLayout>
</LinearLayout>