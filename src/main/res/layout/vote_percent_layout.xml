<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="6dp">

    <View
        android:id="@+id/vote_percent_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_vote_status_percent_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/vote_support_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/shape_support_percent" />

        <View
            android:id="@+id/view_interval"
            android:layout_width="2dp"
            android:layout_height="1dp" />

        <View
            android:id="@+id/vote_unsupport_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shape_unsupport_percent" />

    </LinearLayout>

</FrameLayout>
