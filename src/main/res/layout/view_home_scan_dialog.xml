<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#502E2F47"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_radius_6">
            <TextView
                android:id="@+id/home_scan_txt_transfer"
                style="@style/common_txt_style_14_666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:text="@string/main_home_top_txt_03"/>
            <View
                android:id="@+id/home_scan_view_line"
                style="@style/common_line_horizontal"/>
            <TextView
                android:id="@+id/home_scan_txt_bind"
                style="@style/common_txt_style_14_666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:text="@string/main_me_txt_edit_01"/>
            <View style="@style/common_line_horizontal"/>
            <TextView
                android:id="@+id/home_scan_txt_look"
                style="@style/common_txt_style_14_666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:text="@string/cold_wallet_txt_11"/>
        </LinearLayout>
        <TextView
            android:id="@+id/home_scan_txt_cancle"
            style="@style/common_txt_style_14_666"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_9C9EB9"
            android:background="@drawable/bg_white_radius_6"
            android:gravity="center"
            android:text="@string/dailog_psd_btn_cancle"/>
    </LinearLayout>
</LinearLayout>