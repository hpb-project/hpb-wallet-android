<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_vote_pop_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/view_pop_vote_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_18"
                android:padding="@dimen/dp_12"
                android:src="@mipmap/icon_raduis_close" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_popwindow_vote_centent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_44"
            android:background="@drawable/bg_common_whait_dialog"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_vote_details_dialog_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_18">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/common_txt_style_15_333"
                        android:text="@string/activity_vote_txt_22"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/view_pop_vote_name"
                        style="@style/common_txt_style_15_333"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="120dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/view_ticket_num"
                        style="@style/common_txt_style_14_666"
                        android:text="@string/activity_vote_txt_23"
                        android:textColor="@color/color_2E2F47" />

                    <TextView
                        android:id="@+id/view_pop_vote_residue_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:textColor="#A3A5BC"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_vote_details_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/view_pop_vote_compute_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_vote_sub_gray" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="15dp"
                        android:background="#D1D2DC" />

                    <EditText
                        android:id="@+id/view_pop_vote_compute_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/color_black_000"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="15dp"
                        android:background="#D1D2DC" />

                    <ImageView
                        android:id="@+id/view_pop_vote_compute_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_vote_add_gray" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/view_pop_vote_layout_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/common_txt_style_14_666"
                        android:layout_below="@+id/view_pop_vote_residue_count"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/activity_vote_txt_24"
                        android:textColor="@color/color_2E2F47" />

                    <EditText
                        android:id="@+id/view_pop_vote_edit_psd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_vote_details_bg"
                        android:inputType="textPassword"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/view_pop_vote_btn_voting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/dp_44"
        android:background="@mipmap/icon_vote_btn_voteing"
        android:textAllCaps="false"
        android:textColor="#232538"
        android:textSize="@dimen/dp_16" />

</LinearLayout>