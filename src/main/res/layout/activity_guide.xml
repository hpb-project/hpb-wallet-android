<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/base_theme_color">
    <!--app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"-->
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_foreground"
        style="@style/MatchMatch"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point"
        app:banner_pointTopBottomMargin="@dimen/dp_15"
        app:banner_transitionEffect="alpha" />

    <TextView
        android:id="@+id/tv_guide_skip"
        style="@style/WrapWrap"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:padding="4dp"
        android:text="@string/activity_guide_btn_txt_01"
        android:textColor="@color/color_334364"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/btn_guide_enter"
        style="@style/WrapWrap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_42"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dp_5">

        <TextView
            style="@style/WrapWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_btn_guide_enter"
            android:gravity="center"
            android:text="@string/activity_guide_btn_txt_03"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>