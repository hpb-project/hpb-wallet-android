<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_more_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_common_edit_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/activity_records_txt_01"
        android:textColor="@color/color_191E25"
        android:textSize="14dp" />

    <View
        style="@style/common_line_horizontal"
        android:layout_marginTop="15dp"
        android:background="#EAECEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transfer_records_choose_dailog_btn_01"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/color_F5F6F8"
                android:gravity="center"
                android:text="@string/main_token"
                android:textColor="@color/color_black_333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/transfer_records_choose_dailog_btn_02"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/color_F5F6F8"
                android:gravity="center"
                android:text="HRC-20"
                android:textColor="@color/color_black_333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/transfer_records_choose_dailog_btn_03"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/color_F5F6F8"
                android:gravity="center"
                android:text="HRC-721"
                android:textColor="@color/color_black_333"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ListView
                android:id="@+id/transfer_records_choose_dailog_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent"
                android:scrollbars="none" />

            <RadioGroup
                android:id="@+id/transfer_records_choose_dailog_gadio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="全部"
                        android:textColor="@color/color_black_333"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/radioButton_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/dp_18"
                        android:background="@mipmap/icon_dividend_range_02"
                        android:button="@null"
                        android:checked="true"
                        android:text="" />
                </RelativeLayout>

                <View
                    style="@style/common_line_horizontal"
                    android:background="#EAECEE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="全部"
                        android:textColor="@color/color_black_333"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/radioButton_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/dp_18"
                        android:background="@mipmap/icon_dividend_range_01"
                        android:button="@null"
                        android:text="" />
                </RelativeLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_line_horizontal"
        android:background="#EAECEE" />


    <TextView
        android:id="@+id/transfer_records_choose_dailog_btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/dailog_psd_btn_cancle"
        android:textColor="@color/color_334364" />
</LinearLayout>