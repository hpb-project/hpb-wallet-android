<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wallet_manager_base"
    android:layout_width="match_parent"
    android:background="@mipmap/icon_total_assets_bg"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_wallet_manager_header_img"
            style="@style/wallet_heaer_name_txt"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_wallet_manager_header_img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_wallet_manager_name"
                style="@style/common_txt_style_15_333"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/item_wallet_manager_address"
                style="@style/common_txt_style_12_999"
                android:textColor="@color/white"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="right">
                <TextView
                    android:id="@+id/item_wallet_manager_money"
                    style="@style/common_txt_style_14_666"
                    android:textColor="@color/white"
                    android:textSize="22dp"/>
                <TextView
                    style="@style/common_txt_style_14_666"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/white"
                    android:text="@string/wallet_manager_txt_money_unit_01"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <TextView
                android:id="@+id/item_wallet_manager_img_cold_status"
                style="@style/common_txt_style_12_999"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:text="@string/import_wallet_item_coldwallet"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/bg_coldwallet_dialog" />
            <TextView
                android:id="@+id/item_wallet_manager_img_no_copy"
                style="@style/common_txt_style_12_999"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/sp_11"
                android:text="@string/wallet_manager_txt_no_copy"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/bg_common_dialog" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>