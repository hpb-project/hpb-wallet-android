<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6"
    android:orientation="vertical">
    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_18"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_message_center_details_txt_top"
            style="@style/common_txt_style_15_333" />
        <TextView
            android:id="@+id/activity_message_center_details_txt_time"
            style="@style/common_txt_style_12_999"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_9C9EB9" />
        <TextView
            android:id="@+id/activity_message_center_details_txt_content"
            style="@style/common_txt_style_14_666"
            android:textColor="@color/color_9C9EB9"
            android:layout_marginTop="@dimen/dp_18"
            android:lineSpacingExtra="@dimen/dp_4"/>
    </LinearLayout>

</LinearLayout>
