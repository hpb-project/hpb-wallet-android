<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_transfer_layout_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_18"
    android:paddingTop="@dimen/dp_18"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/item_transfer_img_biaoshi"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_transfer_txt_address"
                    style="@style/common_txt_style_14_666"
                    android:textColor="@color/color_black_333"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/item_transfer_txt_money"
                    style="@style/common_txt_style_14_666"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_3FE77B"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/item_transfer_txt_time"
                    style="@style/common_txt_style_12_999"
                    android:textColor="@color/color_BABDC1"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/item_transfer_txt_cointype"
                    style="@style/common_txt_style_12_999"
                    android:textColor="@color/color_9AA0AB"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_gray_records_type"
                    android:textSize="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_18"
            android:gravity="right">

        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_line_horizontal"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_36"/>

</LinearLayout>