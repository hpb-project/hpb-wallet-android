<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F6F8"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.zhaoxi.Open_source_Android.common.view.refresh.MyPtrFrameLayout
        android:id="@+id/activty_node_dividend_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/activty_node_dividend_refresh_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F6F8"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@mipmap/icon_node_dividend_top_bg" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="-45dp"
                        android:layout_marginRight="@dimen/dp_18"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true"
                            app:contentPaddingLeft="@dimen/dp_18"
                            app:contentPaddingRight="@dimen/dp_18">

                            <LinearLayout
                                android:id="@+id/activity_node_dividend_layout_isnot_node"
                                android:layout_width="match_parent"
                                android:layout_height="312dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_node_dividend_nodata" />

                                <TextView
                                    style="@style/common_txt_style_12_999"
                                    android:layout_marginTop="22dp"
                                    android:gravity="center"
                                    android:text="@string/activity_cion_fh_txt_02"
                                    android:textColor="@color/color_54658B" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_node_dividend_layout_has_node"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_03"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_name"
                                        style="@style/common_txt_style_12_999"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="100dp"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_04_01"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_boe_address"
                                        style="@style/common_txt_style_12_999"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="120dp"
                                        android:gravity="right"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_04_02"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_address"
                                        style="@style/common_txt_style_12_999"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="120dp"
                                        android:gravity="right"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_05"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_rank"
                                        style="@style/common_txt_style_14_666"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_06"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_poll"
                                        style="@style/common_txt_style_14_666"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_07"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_lpoll"
                                        style="@style/common_txt_style_14_666"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_15"
                                    android:paddingBottom="@dimen/dp_15">

                                    <TextView
                                        style="@style/common_txt_style_14_666"
                                        android:layout_centerVertical="true"
                                        android:text="@string/activity_cion_fh_txt_08"
                                        android:textColor="@color/color_334364" />

                                    <TextView
                                        android:id="@+id/activity_node_dividend_txt_node_earn"
                                        style="@style/common_txt_style_14_666"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/color_54658B" />
                                </RelativeLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="@dimen/dp_18"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/activity_node_dividend_btn_how_to_node"
                                style="@style/common_btn_style_defult"
                                android:background="@drawable/draw_btn_defult_bg_03"
                                android:text="@string/activity_cion_fh_txt_09"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/activity_node_dividend_btn_goto_look"
                                style="@style/common_btn_style_defult"
                                android:background="@drawable/draw_btn_defult_bg_03"
                                android:text="@string/activity_cion_fh_txt_11"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/activity_node_dividend_btn_goto_send"
                                style="@style/common_btn_style_defult"
                                android:layout_marginTop="@dimen/dp_20"
                                android:background="@drawable/draw_btn_defult_bg_04"
                                android:text="@string/activity_cion_fh_txt_10"
                                android:textAllCaps="false"
                                android:textColor="@color/color_2E2F47"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </com.zhaoxi.Open_source_Android.common.view.refresh.MyPtrFrameLayout>
</LinearLayout>



