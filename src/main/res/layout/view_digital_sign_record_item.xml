<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sign_record_root"
    android:background="@mipmap/icon_digital_sign_record_card_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_26">

    <!--数字签名日期和时间-->
    <TextView
        android:id="@+id/tv_digital_sign_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        tools:text="2019-10-01 12:00" />

    <!--数字签名内容-->
    <TextView
        android:id="@+id/tv_digital_sign_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        tools:text="0xB9363D58Efd4B26eFA5792a641c4b90950E6cAD20xB9363D58Efd4B26eFA5792aJUI8989LSK89898989UIE773" />

</LinearLayout>