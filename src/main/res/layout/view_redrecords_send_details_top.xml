<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/icon_red_record_send_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/item_redrecords_details_txt_top_money"
                style="@style/common_txt_style_12_999"
                android:textSize="30sp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_5" />
            <TextView
                style="@style/common_txt_style_14_666"
                android:textColor="@color/white"
                android:text=" HPB"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_redrecords_details_txt_top_type"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_white_radius_3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="@string/activity_red_record_txt_09_1"/>
                <com.zhaoxi.Open_source_Android.common.view.MyTextView
                    android:id="@+id/item_redrecords_details_txt_top_address"
                    style="@style/common_txt_style_12_999"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_5" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_redrecords_details_txt_top_des"
                style="@style/common_txt_style_12_999"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>