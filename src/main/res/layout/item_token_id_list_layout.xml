<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_assets_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_25"
    android:paddingTop="@dimen/dp_18"
    android:paddingEnd="@dimen/dp_25">


    <TextView
        android:id="@+id/item_token_id_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black_333"
        android:textSize="@dimen/sp_16"
        tools:text="09-04 12:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_main_token_detail_list_from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color_BABDC1"
            android:textSize="@dimen/sp_14"
            tools:text="0xc2a...3bf26" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_20"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="To"
            android:textColor="@color/color_BABDC1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_main_token_detail_list_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color_BABDC1"
            android:textSize="@dimen/sp_14"
            tools:text="0xc2a...3bf26" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="@dimen/sp_15"
        android:background="@drawable/shape_under_line" />

</LinearLayout>