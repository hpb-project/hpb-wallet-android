<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_more_root"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sign_record"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/shape_more_bg"
        android:gravity="center"
        android:text="@string/digital_sign_more_sign_record_txt"
        android:textColor="#191E25"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F5F6F8" />

    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/dailog_psd_btn_cancle"
        android:textColor="#191E25"
        android:textSize="14sp" />


</LinearLayout>