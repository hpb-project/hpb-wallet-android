<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_vote_pop_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_pop_vote_changeaddress_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_18"
                android:src="@mipmap/icon_raduis_close"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_popwindow_vote_centent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_44"
            android:background="@drawable/bg_common_whait_dialog"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_vote_details_dialog_top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_18"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/common_txt_style_14_666"
                        android:text="@string/activity_vote_details_txt_01"
                        android:textColor="@color/color_2E2F47" />
                    <TextView
                        android:id="@+id/view_pop_vote_changeaddress_txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_vote_details_bg"
                        android:lines="3"
                        android:textSize="14dp"
                        android:textColor="@color/color_2E2F47"
                        android:visibility="gone"/>
                    <EditText
                        android:id="@+id/view_pop_vote_changeaddress_edit_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:lines="3"
                        android:maxLength="42"
                        android:background="@drawable/bg_vote_details_bg"/>
                    <TextView
                        android:id="@+id/view_pop_vote_changeaddress_txt_status_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#FB4E4E"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/activity_vote_details_txt_04"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/view_pop_vote_changeaddress_pad_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/common_txt_style_14_666"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/view_pop_vote_residue_count"
                        android:layout_marginTop="15dp"
                        android:text="@string/activity_vote_txt_24"
                        android:textColor="@color/color_2E2F47" />
                    <EditText
                        android:id="@+id/view_pop_vote_changeaddress_edit_psd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/color_2E2F47"
                        android:textSize="14dp"
                        android:background="@drawable/bg_vote_details_bg"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/view_pop_vote_changeaddress_btn_voting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/dp_44"
        android:background="@mipmap/icon_vote_btn_voteing"
        android:text="@string/activity_vote_details_txt_03"
        android:textAllCaps="false"
        android:textColor="#232538"
        android:textSize="@dimen/dp_16" />

</LinearLayout>