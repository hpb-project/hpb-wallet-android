<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/common_toolbar" />
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/common_toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FF4465"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_18"
            android:text="@string/export_private_key_txt_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/export_private_key_txt_content"
            style="@style/txt_export_wallet_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="@dimen/dp_25"/>
    </LinearLayout>

    <Button
        android:id="@+id/export_private_key_btn_submit"
        style="@style/common_btn_style_defult"
        android:layout_alignParentBottom="true"
        android:background="@drawable/draw_btn_defult_bg_03"
        android:layout_margin="@dimen/dp_18"
        android:textAllCaps="false"
        android:text="@string/export_private_key_btn_submit" />
</RelativeLayout>
