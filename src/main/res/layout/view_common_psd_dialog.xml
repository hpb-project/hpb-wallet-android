<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_more_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_common_edit_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/color_191E25"
        android:text="Title"/>
    <TextView
        android:id="@+id/dialog_common_edit_txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_191E25"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="msg"/>

    <EditText
        android:id="@+id/common_tip_edit_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@drawable/bg_import_wallet_lines"
        android:visibility="visible"
        android:textColorHint="#BABDC1"
        android:hint="@string/dailog_psd_edit_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/common_notitle_dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_black_radius"
            android:text="@string/dailog_psd_btn_ok"/>
        <TextView
            android:id="@+id/common_notitle_dialog_btn_cancle"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/color_334364"
            android:text="@string/dailog_psd_btn_cancle"/>
    </LinearLayout>
</LinearLayout>