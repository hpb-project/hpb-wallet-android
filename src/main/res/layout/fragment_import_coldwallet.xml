<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:padding="@dimen/dp_18">
            <TextView
                style="@style/common_txt_style_14_666"
                android:text="@string/import_wallet_item_coldwallet_des0"
                android:layout_marginBottom="10dp"/>

            <TextView
                style="@style/common_txt_style_12_999"
                android:textColor="@color/color_66688F"
                android:text="@string/import_wallet_item_coldwallet_des1" />

            <TextView
                style="@style/common_txt_style_12_999"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/color_66688F"
                android:text="@string/import_wallet_item_coldwallet_des2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_edit_wallet_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_18">

                <EditText
                    android:id="@+id/import_coldwallet_edit_address"
                    style="@style/edit_create_wallet_psd"
                    android:gravity="top"
                    android:hint="@string/import_wallet_item_coldwallet_hint"
                    android:inputType="text"
                    android:maxLength="42"
                    android:minLines="3" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="20dp"
                android:background="@drawable/draw_edit_wallet_bg"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/import_coldwallet_edit_name"
                    style="@style/edit_create_wallet_psd"
                    android:layout_marginRight="@dimen/dp_26"
                    android:hint="@string/create_wallet_edit_name_tip"
                    android:inputType="text"
                    android:maxLength="12" />

                <ImageView
                    android:id="@+id/import_coldwallet_img_delete"
                    style="@style/edit_right_img"
                    android:src="@mipmap/icon_edit_delete"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/view_common_create_wallet_bottom" />
    </LinearLayout>
</ScrollView>
