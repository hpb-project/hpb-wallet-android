<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_theme_color</item>
        <item name="colorPrimaryDark">@color/base_theme_color</item>
        <item name="colorAccent">@color/base_theme_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_202633</item>
        <item name="colorPrimaryDark">@color/color_202633</item>
        <item name="colorAccent">@color/color_202633</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_202633</item>
        <item name="colorPrimaryDark">@color/color_202633</item>
        <item name="colorAccent">@color/color_202633</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- common activity animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- popdialog 动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
    <style name="popwin_anim_style_left">
        <item name="android:windowEnterAnimation">@anim/pop_left_in</item>
        <item name="android:windowExitAnimation">@anim/pop_left_out</item>
    </style>

    <style name="VoteDialogAnim">
        <item name="android:windowEnterAnimation">@anim/window_enter</item>
        <item name="android:windowExitAnimation">@anim/window_exit</item>
    </style>


    <style name="CustomStyledIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomStyledIndicators2" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator2</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <!--    &lt;!&ndash; 点击时在不同状态下显示的背景色 &ndash;&gt;
            <item name="android:background">@drawable/custom_tab_indicator</item>
            &lt;!&ndash; 分割线图片设置 &ndash;&gt;
            <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
            &lt;!&ndash; 设置分割线的显示位置，或是不显示 &ndash;&gt;
            <item name="android:showDividers">none</item>-->

        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/tab_page_indicator_btn</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">15dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CustomTabPageIndicator2" parent="CustomTabPageIndicator">
        <item name="android:textColor">@color/tab_page_indicator2_btn</item>
    </style>

    <style name="myTransparent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 半透明 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>